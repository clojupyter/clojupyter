#!/bin/env bash

version() {
    sed '/:version/ s/^.*"\(.\+\)".*$/\1/g' resources/clojupyter/assets/version.edn
}

install() {
    echo Installing
}

uninstall() {
    echo Uninstalling
}

list () {
    echo Installed kernels:
}
help() {
    echo "Clojupyter $(version)"
    echo
    echo "Available Commands:"
    echo
    echo "  - help command* | --help | -h"
    echo "  - install opts*"
    echo "  - uninstall opts*"
    echo "  - list opts* filt*"
    echo "  - version"
}

([[ $# == 0 ]] || [[ $1 == --help ]] || [[ $1 == -h ]]) && { help; exit 0; }

$@
